{
  "name": "piio",
  "version": "0.7.33",
  "description": "Piio is a live production interface software",
  "main": "app/main.js",
  "scripts": {
    "start": "electron . --debug=true",
    "debug": "electron . --debug=true --port=8000",
    "make-linux": "electron-builder build --linux",
    "make-windows": "electron-forge make --platform win32"
  },
  "keywords": [
    "piio"
  ],
  "author": {
    "name" : "Philipp Buerkner"
  },
  "license": "UNLICENSED",

  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel",
          "zip"
          ]
        },
      "packagerConfig": {
        "executableName": "piio",
        "icon": "./app/logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "piio",
            "title": "Production Interface IO",
            "setupIcon": "./app/logo.ico",
            "loadingGif": "img/loading.gif"
          }
        }
      ]
    }
  },
  "build": {
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Office",
      "description": "Production Interface IO"
    },
    "appId": "de.piio",
    "productName": "piio",
    "icon": "app/logo.png",
    "extraResources": [
      "**js2/class/*",
      "**js2/*"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "debug": "^4.1.1",
    "electron": "^8.5.5",
    "electron-packager": "^13.1.1",
    "electron-winstaller": "^3.0.4",
    "electron-builder": "^22.14.5",
    "electron-forge-maker-appimage": "^22.14.7"
  },
  "dependencies": {
    "express": "^4.16.4",
    "express-ws": "^4.0.0",
    "fs-extra": "^7.0.1",
    "nedb": "^1.8.0",
    "ws": "^6.1.0"
  }
}
